{
  "name": "sendgrid-mock",
  "version": "1.8.0-SNAPSHOT",
  "description": "SendGrid API mock",
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "targets": {
    "default": {
      "engines": {
        "browsers": ">= 50%"
      }
    }
  },
  "scripts": {
    "lint": "eslint src",
    "test": "jest",
    "server-dev": "cross-env API_KEY=sendgrid-api-key MAIL_HISTORY_DURATION=PT24H node ./src/server/Server.js",
    "ui-dev": "parcel ./src/ui/index.html",
    "dev": "concurrently \"npm run server-dev\" \"npm run ui-dev\"",
    "build": "parcel build ./src/ui/index.html"
  },
  "author": "janjaali",
  "repository": {
    "url": "https://github.com/janjaali/sendGrid-mock",
    "type": "git"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.1",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.0",
    "log4js": "^6.4.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-table": "^6.9.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "concurrently": "^7.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.14.3",
    "jest": "^27.0.0",
    "parcel": "^2.6.0",
    "process": "^0.11.10",
    "sinon": "^14.0.0",
    "supertest": "^6.0.1"
  }
}
