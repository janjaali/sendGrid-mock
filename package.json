{
  "name": "sendgrid-mock",
  "version": "1.12.0",
  "description": "SendGrid API mock",
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "targets": {
    "default": {
      "engines": {
        "browsers": ">= 50%"
      }
    }
  },
  "scripts": {
    "lint": "eslint src",
    "test": "jest",
    "start": "node ./build/src/server/Server.js",
    "server-dev": "cross-env API_KEY=sendgrid-api-key MAIL_HISTORY_DURATION=PT24H tsx ./src/server/Server.ts",
    "ui-dev": "parcel ./src/ui/index.html",
    "dev": "concurrently \"npm run server-dev\" \"npm run ui-dev\"",
    "build": "parcel build ./src/ui/index.html && tsc --project tsconfig.json && tsc-alias -p tsconfig.json"
  },
  "author": "janjaali",
  "repository": {
    "url": "https://github.com/janjaali/sendGrid-mock",
    "type": "git"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.4",
    "body-parser": "^1.20.1",
    "express": "^4.21.1",
    "express-basic-auth": "^1.2.0",
    "express-json-validator-middleware": "^3.0.1",
    "express-rate-limit": "^6.7.0",
    "log4js": "^6.4.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-table": "^6.9.0",
    "sanitize-filename": "^1.6.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/json-schema": "^7.0.15",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "concurrently": "^7.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.14.3",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "json-schema": "^0.4.0",
    "parcel": "^2.6.2",
    "process": "^0.11.10",
    "prop-types": "^15.8.1",
    "sinon": "^14.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0"
  }
}
